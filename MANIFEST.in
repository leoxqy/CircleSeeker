# Include documentation
include README.md
include LICENSE
include COMMERCIAL_LICENSE.md
include CHANGELOG.md
recursive-include docs *.md *.png

# Requirements are now in pyproject.toml

# Include package data
recursive-include src/circleseeker/templates *.html *.css *.js
recursive-include src/circleseeker/resources *.yaml *.json
recursive-include src/circleseeker/data *.fa *.fasta *.txt

# Include test files
recursive-include tests *.py *.yaml *.json *.csv *.tsv *.fa *.fai *.fasta *.txt

# Exclude generated simulation outputs (can be extremely large)
prune tests/simulation/batch_validation_results*
prune tests/simulation/_sanity_batch_validation

# Include configuration files
include pytest.ini
include .gitignore

# Include conda recipe
recursive-include conda-recipe *.yaml *.sh *.txt

# Include helper scripts
recursive-include scripts *.py

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.swp
global-exclude .DS_Store
global-exclude __pycache__
global-exclude .pytest_cache
exclude .git
exclude .github
prune docs/_build
prune .tmp_work

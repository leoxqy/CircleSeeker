{
    "report_metadata": {
        "title": "eccDNA Analysis Report",
        "version": "2.1.0",
        "author": "CircleSeeker Pipeline",
        "description": "Comprehensive analysis of extrachromosomal circular DNA sequences"
    },
    "output_settings": {
        "default_template": "report_template.html",
        "default_css": "academic_styles.css",
        "include_timestamp": true,
        "number_format": {
            "decimal_places": 2,
            "thousands_separator": ",",
            "percentage_precision": 2
        }
    },
    "section_config": {
        "executive_summary": {
            "enabled": true,
            "order": 1
        },
        "read_classification": {
            "enabled": true,
            "order": 2,
            "include_charts": false
        },
        "ctcr_distribution": {
            "enabled": true,
            "order": 3,
            "table_caption": "Distribution of circular-template-containing read subtypes"
        },
        "eccdna_statistics": {
            "enabled": true,
            "order": 4,
            "table_caption": "Statistical summary of identified eccDNA sequences by type",
            "include_combined_stats": true
        },
        "overlap_analysis": {
            "enabled": true,
            "order": 5,
            "method_description": "Overlaps determined by sequence content comparison"
        },
        "methods_section": {
            "enabled": true,
            "order": 6,
            "include_limitations": true
        }
    },
    "eccdna_types": {
        "UeccDNA": {
            "display_name": "Unanchored eccDNA",
            "description": "Simple circular DNA sequences",
            "color": "#2c5aa0"
        },
        "MeccDNA": {
            "display_name": "Multi-hit eccDNA",
            "description": "Circular DNA with multiple genomic matches",
            "color": "#28a745"
        },
        "CeccDNA": {
            "display_name": "Chimeric eccDNA",
            "description": "Circular DNA with rearranged segments",
            "color": "#dc3545"
        },
        "Inferred": {
            "display_name": "Inferred eccDNA",
            "description": "Computationally predicted circular DNA",
            "color": "#6c757d"
        }
    },
    "quality_thresholds": {
        "min_sequence_length": 100,
        "max_sequence_length": 1000000,
        "min_overlap_percentage": 80.0,
        "significance_threshold": 0.05
    }
}